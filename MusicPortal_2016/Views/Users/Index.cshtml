@model IEnumerable<MusicPortal_2016.Models.Songs>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2 class="col-md-offset-5">Гость</h2>
<h6 class="col-md-offset-4">Чтобы скачивать или загружать свои трэки - зарегистрируйтесь!</h6>

<table class="table">
    <tr>
        <th>
            <label style="text-align: center">Название трэка</label>
        </th>
        <th>
            <label for="">Жанр</label>
        </th>
        <th>
            <label style="text-align: center">Прослушать трек</label>
        </th>
        <th>
            <label for=""></label>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)

            </td>
            <td>
                <audio controls>
                    <source src='@Url.Content(@item.UrlRelativeAdress)' type="audio/ogg" />
                    <source src='@Url.Content(@item.UrlRelativeAdress)' type="audio/mpeg" />
                    <source src='@Url.Content(@item.UrlRelativeAdress)' type="audio/mp3" />
                </audio>
            </td>
            @*<td>
                @Html.ActionLink("Скачать", "Download", new { id = item.Id })
            </td>*@
        </tr>
    }

</table>
